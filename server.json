{
  "$schema": "https://static.modelcontextprotocol.io/schemas/2025-09-16/server.schema.json",
  "name": "io.github.Snowflake-Labs/mcp",
  "description": "MCP Server for Snowflake from Snowflake Labs",
  "status": "active",
  "repository": {
    "url": "https://github.com/Snowflake-Labs/mcp",
    "source": "github"
  },
  "version": "${VERSION}",
  "packages": [
    {
      "registryType": "pypi",
      "registryBaseUrl": "https://pypi.org",
      "identifier": "snowflake-labs-mcp",
      "version": "${VERSION}",
      "transport": {
        "type": "stdio"
      },
      "environmentVariables": [
        {
          "description": "Account identifier (e.g. xy12345.us-east-1)",
          "isRequired": false,
          "format": "string",
          "isSecret": false,
          "name": "SNOWFLAKE_ACCOUNT"
        },
        {
          "description": "Snowflake host URL",
          "isRequired": false,
          "format": "string",
          "isSecret": false,
          "name": "SNOWFLAKE_HOST"
        },
        {
          "description": "Username for authentication",
          "isRequired": false,
          "format": "string",
          "isSecret": false,
          "name": "SNOWFLAKE_USER"
        },
        {
          "description": "Password or programmatic access token",
          "isRequired": false,
          "format": "string",
          "isSecret": false,
          "name": "SNOWFLAKE_PASSWORD"
        },
        {
          "description": "Role to use for connection",
          "isRequired": false,
          "format": "string",
          "isSecret": false,
          "name": "SNOWFLAKE_ROLE"
        },
        {
          "description": "Warehouse to use for queries",
          "isRequired": false,
          "format": "string",
          "isSecret": false,
          "name": "SNOWFLAKE_WAREHOUSE"
        },
        {
          "description": "MFA passcode for authentication",
          "isRequired": false,
          "format": "string",
          "isSecret": false,
          "name": "SNOWFLAKE_PASSCODE"
        },
        {
          "description": "Private key for key pair authentication",
          "isRequired": false,
          "format": "string",
          "isSecret": false,
          "name": "SNOWFLAKE_PRIVATE_KEY"
        },
        {
          "description": "Path to private key file",
          "isRequired": false,
          "format": "string",
          "isSecret": false,
          "name": "SNOWFLAKE_PRIVATE_KEY_FILE"
        },
        {
          "description": "Password for encrypted private key",
          "isRequired": false,
          "format": "string",
          "isSecret": false,
          "name": "SNOWFLAKE_PRIVATE_KEY_FILE_PWD"
        }
      ],
      "packageArguments": [
        {
          "type": "named",
          "name": "--service-config-file",
          "description": "Path to service specification file",
          "isRequired": true
        },
        {
          "type": "named",
          "name": "--account",
          "description": "Account identifier (e.g. xy12345.us-east-1)",
          "isRequired": false
        },
        {
          "type": "named",
          "name": "--host",
          "description": "Snowflake host URL",
          "isRequired": false
        },
        {
          "type": "named",
          "name": "--user",
          "description": "Username for authentication",
          "isRequired": false
        },
        {
          "type": "named",
          "name": "--password",
          "description": "Password or programmatic access token",
          "isRequired": false
        },
        {
          "type": "named",
          "name": "--role",
          "description": "Role to use for connection",
          "isRequired": false
        },
        {
          "type": "named",
          "name": "--warehouse",
          "description": "Warehouse to use for queries",
          "isRequired": false
        },
        {
          "type": "named",
          "name": "--passcode-in-password",
          "description": "Whether passcode is embedded in password",
          "isRequired": false
        },
        {
          "type": "named",
          "name": "--passcode",
          "description": "MFA passcode for authentication",
          "isRequired": false
        },
        {
          "type": "named",
          "name": "--private-key",
          "description": "Private key for key pair authentication",
          "isRequired": false
        },
        {
          "type": "named",
          "name": "--private-key-file",
          "description": "Path to private key file",
          "isRequired": false
        },
        {
          "type": "named",
          "name": "--private-key-file-pwd",
          "description": "Password for encrypted private key",
          "isRequired": false
        },
        {
          "type": "named",
          "name": "--authenticator",
          "description": "Authentication type",
          "default": "snowflake",
          "isRequired": false
        },
        {
          "type": "named",
          "name": "--connection-name",
          "description": "Name of connection from connections.toml (or config.toml) file",
          "isRequired": false
        },
        {
          "type": "named",
          "name": "--transport",
          "description": "Transport for the MCP server",
          "default": "stdio",
          "choices": ["stdio", "http", "sse", "streamable-http"],
          "isRequired": false
        },
        {
          "type": "named",
          "name": "--endpoint",
          "description": "Custom endpoint path for HTTP transports",
          "default": "/mcp",
          "isRequired": false
        }
      ]
    }
  ]
}
